<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout_mainScreen"
    tools:context="com.example.nnarayan.buttonsandtoasts.MainActivity">

    <Button
        android:id="@+id/button_for_invisible_man"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:backgroundTint="#AED2FF"
        android:onClick="toDo"
        android:text="The invisible man's to-do list!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="0dp"
        android:id="@+id/button_for_pink_panther"
        android:layout_height="44dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FB9BF3"
        android:onClick="toDo"
        android:text="The pink panther's to-do list!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_for_lfc"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="#BB9BF3"
        android:text="LFC's to-do list!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
